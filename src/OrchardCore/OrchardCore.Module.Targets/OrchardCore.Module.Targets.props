<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- 
    This file is packaged with "OrchardCore.AsModule.nupkg" in "./build" such that any Module that references
    it will get its static assets copied to "$(ApplicationDirectory)\Packages".
  -->

  <PropertyGroup>
    <ModuleManifest>Name: $(MSBuildProjectName)</ModuleManifest>
    <ExcludedFiles>**\*.cs;*.csproj*;obj\**;bin\**;Assets.json;Assets\**;Properties\**;*.props;*.targets;.vs\**</ExcludedFiles>
    <ModuleType Condition="'$(ModuleType)' == ''">Module</ModuleType>
  </PropertyGroup>

  <ItemGroup>
    <PackageAssetFiles Include="**\*" Exclude="$(ExcludedFiles)" />
  </ItemGroup>

  <Target Name="EmbeddProjectAssetFiles" AfterTargets="AfterResolveReferences">
    <Message Text="Generating manifest file: $(MSBuildProjectName)" Condition="!Exists('$(ModuleType).txt')" Importance="high" />

    <ItemGroup>
      <ModuleAssetFiles Include="Modules\$(MSBuildProjectName)\%(PackageAssetFiles.RecursiveDir)%(Filename)%(Extension)" />
      <ModuleAssetFiles Include="Modules\$(MSBuildProjectName)\$(ModuleType).txt" />
    </ItemGroup>

    <WriteLinesToFile
      File="obj\ModuleAssetFiles.map"
      Lines="@(ModuleAssetFiles)"
      Condition="'@(ModuleAssetFiles)' != ''"
      Overwrite="true"
      Encoding="utf-8"
      ContinueOnError="true" />

    <WriteLinesToFile
      File="obj\$(ModuleType).txt"
      Lines="$(ModuleManifest)"
      Condition="!Exists('$(ModuleType).txt')"
      Overwrite="true"
      Encoding="utf-8"
      ContinueOnError="true" />

    <ItemGroup>
      <EmbeddedResource Include="@(PackageAssetFiles)">
        <WithCulture>false</WithCulture>
        <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      </EmbeddedResource>
      <EmbeddedResource Include="obj\ModuleAssetFiles.map">
        <Link>ModuleAssetFiles.map</Link>
        <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      </EmbeddedResource>
      <EmbeddedResource Include="obj\$(ModuleType).txt" Condition="!Exists('$(ModuleType).txt')">
        <Link>$(ModuleType).txt</Link>
        <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      </EmbeddedResource>
    </ItemGroup>
  </Target>

  <Target Name="GetProjectAssetFiles" Returns="@(ProjectAssetFiles)">
    <ItemGroup>
      <ProjectAssetFiles Include="Modules\$(MSBuildProjectName)\%(PackageAssetFiles.RecursiveDir)%(Filename)%(Extension)" />
      <ProjectAssetFiles Include="Modules\$(MSBuildProjectName)\$(ModuleType).txt" />
    </ItemGroup>
  </Target>

  <!-- Adds a custom .props file to the generated module package -->
  
  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)Package.Build.props" Pack="true">
      <PackagePath>build\$(TargetFramework)\$(PackageId).props</PackagePath>
    </None>
    <None Include="**\*" Exclude="$(ExcludedFiles)" Pack="true">
      <PackagePath>assets\$(PackageId)\</PackagePath>
    </None>
    <None Include="obj\$(ModuleType).txt" Pack="true" Condition="!Exists('$(ModuleType).txt')">
      <PackagePath>assets\$(PackageId)\$(ModuleType).txt</PackagePath>
    </None>
  </ItemGroup>

</Project>
